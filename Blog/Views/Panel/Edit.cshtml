@model PostViewModel

@{
    ViewBag.Title = "Editor";
}
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div class="col-md-8 offset-md-2">
    <form  asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />

            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" id="title" asp-for="Title" />
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" id="description" asp-for="Description" />
            </div>
            <div class="form-group">
                <label for="tags">Tags</label>
                <input class="form-control" id="tags" asp-for="Tags" />
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" id="category" asp-for="Category">
                    <option></option>
                    <option value="Cooking">Cooking</option>
                    <option value="Programming">Programming</option>
                    <option value="Photography">Photography</option>
                </select>

            </div>
            <div class="form-group">
                <label for="editor">Body</label>
                <textarea class="form-control" id="editor" asp-for="Body"></textarea>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input id="image" class="form-control-file" asp-for="CurrentImage" type="hidden" />
                <input  asp-for="Image" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Submit" />
            </div>

    </form>
</div>

@section scripts {
<script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
<script>$('#editor').trumbowyg();</script>
}
 